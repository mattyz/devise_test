<p id="notice"><%= notice %></p>

<% @articles.each do |article| %>
  <h2><%= link_to article.title, article %></h2>
  <p><%= truncate(article.body,lenth: 200) %></p>
<% end %>

<br>

<% if user_signed_in? %>
<%= link_to 'New Article', new_article_path %>
<% else %>
<%= link_to 'Sign In', root_path %>
<% end %>
